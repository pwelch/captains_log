<% provide(:title, 'All Events') %>
<h2>Events</h2>
<div class="center">
  <%= form_tag(events_search_path, :method => "get", id: "search-form", class: "form-inline") do %>
    <%= text_field_tag :query, params[:query], placeholder: "Search Entry Text" %>
    <%= submit_tag "Search", :entry => nil, class: "btn btn-default btn-small" %>
  <% end %>
</div>
<p><%= link_to "Add Event", new_event_path, class: "btn btn-success btn-small" %></p>
<div class="center">
<table class="table table-hover">
    <tr>
      <th>Entry</th>
      <th>Created</th>
    </tr>

  <% @events.each do |event| %>
    <tr>
      <td><%= event.entry %></td>
      <td><%= event.created_at %></td>
      <td><%= link_to 'Show', event %></td>
      <td><%= link_to 'Delete', event_path(event),
        method: :delete, data: { confirm: 'Are you sure?' }
      %></td>
    </tr>
  <% end %>
</table>
</div>
<%= will_paginate@events %>
